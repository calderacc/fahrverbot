{% extends 'layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>
                Fahrverbote in {{ city.name }}
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{ city.description }}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div id="map" style="height: 50vh;"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                <tr>
                    <th>
                        Fahrverbot
                    </th>

                    <th>
                        Beschreibung
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for limitation in city.limitations %}
                    <tr>
                        <td>
                            {{ limitation.title }}
                        </td>

                        <td>
                            {{ limitation.description }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
